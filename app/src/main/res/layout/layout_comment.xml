<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutcomentarios"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="10sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
android:layout_marginLeft="@dimen/minimo"
            android:gravity="center|left"
            android:id="@+id/txtusuariocomentar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/medio"
            android:hint="Nombre usuario" />


        <TextView
            android:id="@+id/txtcomentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:hint="Comentario..."
            android:padding="@dimen/minimo" />

        <TextView
            android:layout_marginRight="@dimen/minimo"
            android:id="@+id/txtfecha"
            android:gravity="center|right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/medio"
            android:hint="hour"
             />
    </LinearLayout>

</android.support.v7.widget.CardView>